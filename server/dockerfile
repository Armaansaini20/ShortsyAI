# server/Dockerfile â€” production-ready for FastAPI (Gunicorn + Uvicorn workers)
FROM python:3.11-slim

# ---- system deps ----
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    build-essential \
    ffmpeg \
    libsndfile1 \
 && rm -rf /var/lib/apt/lists/*

# ---- create non-root user and workdir ----
RUN useradd --create-home appuser
WORKDIR /home/appuser/app

# ---- copy and install python deps ----
COPY requirements.txt ./requirements.txt
RUN python -m pip install --upgrade pip setuptools wheel \
 && pip install --no-cache-dir -r requirements.txt

# ---- copy app code ----
COPY . .

# ---- permissions and switch user ----
RUN chown -R appuser:appuser /home/appuser/app
USER appuser

ENV PORT=8000
EXPOSE 8000

# Use Gunicorn with Uvicorn workers (good for production). 
# Adjust the module path if your app is at a different path (e.g. server.app:app).
CMD ["sh","-c","exec gunicorn -k uvicorn.workers.UvicornWorker server.main:app -b 0.0.0.0:${PORT} --workers 2 --timeout 120"]
